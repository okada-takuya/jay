%h1 Listing Minutes
.field.input-group
  %input.form-control#tag-name{autocomplete: "off", type: "text", placeholder: "Search by Tags"}
  %span.input-group-addon.btn.btn-primary#search-minutes-by-tag
    = glyphicon("search")
%table.table
  %thead
    %tr
      %th Title
      %th Date
      %th Location
      %th Author
      %th{ colspan: '3' }
  %tbody
    - @minutes.each do |minute|
      %tr
        %td= link_to minute.title, minute
        %td= minute.dtstart.strftime("%Y-%m-%d") rescue nil
        %td= minute.location
        %td= minute.author && minute.author.name
        %td= link_to icon('pencil'), edit_minute_path(minute)
        %td= link_to icon('trash'), minute, method: :delete, data: { confirm: 'Are you sure?' }
        %td= link_to icon('repeat'), reuse_minute_path(minute)
%br/
= new_content :minute
